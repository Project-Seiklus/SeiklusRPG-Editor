{
    "include":[
        "src/**/*",
        "lib/**/*.d.ts"
    ],
    "exclude":[
        "node_modules"
    ],
    "compilerOptions":{
        "target":"ES5",
        "module":"commonjs",
        //"strict": true,

        "locale":"ko",
        "pretty":true,

        "rootDir":"src",
        "outDir":"dist",

        "charset": "utf8",
        "emitBOM": false,
        "removeComments": true,

        "sourceMap": true
    }
}