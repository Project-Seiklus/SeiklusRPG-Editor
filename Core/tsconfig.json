{
    "include":[
        "wwwroot/src/**/*",
        "lib"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions":{
        "target":"ES5",
        "module":"amd",
        "esModuleInterop": true,
        
        //"strict": true,

        "locale":"ko",
        "pretty":true,

        "rootDir": "wwwroot/src",
        "outDir": "dist",
        "baseUrl": "wwwroot/src",

        "charset": "utf8",
        "emitBOM": false,
        "removeComments": true,

        "sourceMap": true
    }
}